<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewProfilePictureNav"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewEmail"
        android:layout_alignLeft="@+id/imageViewProfilePicture"
        android:layout_alignStart="@+id/imageViewProfilePicture"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Muhammad Alif Tajudin"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewFullname"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewFullname"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:text="mr_alif@hotmail.com"
        android:textColor="#fff"
        android:textSize="14sp" />

</LinearLayout>